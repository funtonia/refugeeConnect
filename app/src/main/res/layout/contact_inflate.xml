<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="80dp"
    android:layout_width="match_parent"
    android:paddingTop="8dp"
    android:paddingBottom="0dp"
    >
    <ImageButton
        android:id="@+id/contact_mailBT"
        android:layout_width="200dp"
        android:layout_height="55dp"
        android:src="@drawable/message"
        android:background="@drawable/button_shape_contact"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/contact_mailBT"
        android:layout_toEndOf="@+id/contact_mailBT"
        android:gravity="end|center_vertical">
        <ImageButton
            android:id="@+id/contact_favoriteBT"
            android:layout_toRightOf="@+id/contact_mailBT"
            android:layout_toEndOf="@+id/contact_mailBT"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/favorite_grey"
            android:background="@drawable/button_shape_favorite_grey"
            android:layout_marginBottom="5dp"
            />
    </LinearLayout>

</RelativeLayout>